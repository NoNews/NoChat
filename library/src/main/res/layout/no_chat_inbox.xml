<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/no_chat_middle_margin"
    android:paddingTop="@dimen/no_chat_middle_margin">


    <LinearLayout
        android:id="@+id/lt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/no_chat_very_big_margin"
        android:layout_marginStart="@dimen/no_chat_middle_margin"
        android:background="@drawable/chat_inbox_normal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_chat_horizontal_margin">

            <TextView
                android:layout_marginTop="@dimen/no_chat_small_margin"
                android:textColor="@color/no_chat_blue"
                android:text="Сергей Павлов"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_below="@id/tv_name"
                android:id="@+id/lt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="вавлоолаволаволваолваловаловаловаловаловаловалоловаловаловаловаловаловалоавловаловлаолоав"
                    android:id="@+id/tv_message"
                    style="@style/OutboxMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_date"
                style="@style/DateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_content"
                android:text="24:00"
                android:textSize="@dimen/no_chat_small_text_size" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>