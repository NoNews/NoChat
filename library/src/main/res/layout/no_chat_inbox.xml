<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lt_message_root"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/no_chat_middle_margin"
    android:paddingTop="@dimen/no_chat_middle_margin">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile_image"
        android:layout_width="@dimen/no_chat_small_photo"
        android:layout_height="@dimen/no_chat_small_photo"
        android:layout_marginStart="@dimen/no_chat_middle_margin" />

    <LinearLayout
        android:id="@+id/lt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/no_chat_very_big_margin"
        android:layout_marginStart="@dimen/no_chat_middle_margin"
        android:layout_toEndOf="@id/civ_profile_image"
        android:background="@drawable/chat_inbox_normal"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_chat_horizontal_margin">

            <TextView
                android:id="@+id/tv_name"
                style="@style/NoChatNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/no_chat_small_margin" />

            <FrameLayout
                android:id="@+id/lt_content"
                style="@style/NoChatContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name">


                <ImageView
                    android:id="@+id/iv_photo"
                    style="@style/NoChatImageStyle"
                    android:layout_width="@dimen/no_chat_image_width"
                    android:layout_height="@dimen/no_chat_image_height" />

                <TextView
                    android:id="@+id/tv_message"
                    style="@style/NoChatOutboxMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_date"
                style="@style/NoChatDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>