<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_message_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/no_chat_very_small_margin"
    android:paddingTop="@dimen/no_chat_very_small_margin">


    <LinearLayout
        android:id="@+id/lt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/no_chat_middle_margin"
        android:layout_marginStart="@dimen/no_chat_very_big_margin"
        android:background="@drawable/chat_outbox_normal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_chat_horizontal_margin">

            <include
                android:id="@+id/lt_content_group"
                layout="@layout/no_chat_message_content" />


            <TextView
                android:id="@+id/tv_date"
                style="@style/NoChatDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_content_group" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>