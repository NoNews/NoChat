<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/no_chat_middle_margin"
    android:paddingTop="@dimen/no_chat_middle_margin">


    <LinearLayout
        android:id="@+id/lt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/no_chat_middle_margin"
        android:layout_marginStart="@dimen/no_chat_very_big_margin"
        android:background="@drawable/chat_outbox_normal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_chat_horizontal_margin">

            <FrameLayout
                android:id="@+id/lt_content"
                style="@style/NoChatContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_photo"
                    style="@style/NoChatImageStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv_message"
                    style="@style/NoChatOutboxMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_date"
                style="@style/NoChatDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>