<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_message_root"
    style="@style/NoChatWithoutBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/no_chat_very_small_margin"
    android:paddingTop="@dimen/no_chat_very_small_margin">


    <LinearLayout
        android:id="@+id/lt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/no_chat_middle_margin"
        android:layout_marginStart="@dimen/no_chat_very_big_margin"
        android:background="@drawable/chat_outbox_normal"
        android:orientation="horizontal">

        <FrameLayout
            style="@style/NoChatWithoutBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/no_chat_horizontal_margin">

            <LinearLayout
                style="@style/NoChatWithoutBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/lt_content_group"
                    layout="@layout/no_chat_message_content" />


                <LinearLayout
                    style="@style/NoChatWithoutBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/no_chat_middle_margin">

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/NoChatDateStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:22" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/no_chat_timer" />

                    <ImageView
                        android:id="@+id/iv_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/no_chat_delivered" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>