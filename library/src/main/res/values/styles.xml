<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="NoChatMessageTextInput">
        <item name="android:lines">6</item>
        <item name="android:maxLines">10</item>
        <item name="android:minLines">1</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:hint">@string/no_chat_insert_message_hint</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">@dimen/no_chat_small_margin</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/no_chat_vertical_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/no_chat_input_text_size</item>
    </style>


    <style name="NoChatOutboxMessageText">
        <item name="android:layout_marginTop">@dimen/no_chat_very_small_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:autoLink">web</item>
    </style>


    <style name="NoChatOutboxMessageTextSmall" parent="NoChatOutboxMessageText">
        <item name="android:textSize">@dimen/no_chat_small_text_size</item>
        <item name="android:layout_marginTop">0dp</item>

    </style>

    <style name="NoChatDateStyle">
        <!--<item name="android:layout_marginEnd">@dimen/no_chat_middle_margin</item>-->
        <item name="android:textColor">@color/new_gray3</item>
        <item name="android:textSize">@dimen/no_chat_small_text_size</item>
        <item name="android:layout_marginBottom">@dimen/no_chat_small_margin</item>
    </style>

    <style name="NoChatDateStyleSmall" parent="NoChatDateStyle">
        <item name="android:textSize">@dimen/no_chat_very_small_text_size</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>


    <style name="NoChatWithoutBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="NoChatNameStyle">
        <item name="android:textColor">@color/no_chat_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/no_chat_horizontal_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NoChatNameStyleSmall" parent="NoChatNameStyle">
        <item name="android:textColor">@color/no_chat_blue</item>
        <item name="android:textSize">@dimen/no_chat_small_text_size</item>
        <item name="android:layout_marginEnd">@dimen/no_chat_middle_margin</item>
    </style>

    <style name="NoChatAvatarStyle">
        <item name="android:layout_marginEnd">@dimen/no_chat_small_margin</item>
    </style>

    <style name="NoChatImageStyle">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


    <style name="NoChatContentStyle" parent="NoChatWithoutBackground">
        <item name="android:layout_marginEnd">@dimen/no_chat_horizontal_margin</item>
    </style>

    <style name="NoChatHeaderDateStyle">
        <item name="android:paddingBottom">@dimen/no_chat_very_small_margin</item>
        <item name="android:layout_marginTop">@dimen/no_chat_middle_margin</item>
        <item name="android:layout_marginBottom">@dimen/no_chat_middle_margin</item>
        <item name="android:paddingTop">@dimen/no_chat_very_small_margin</item>
        <item name="android:paddingStart">@dimen/no_chat_middle_margin</item>
        <item name="android:paddingEnd">@dimen/no_chat_middle_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/no_chat_date_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NoChatStatusStyle">
        <item name="android:layout_marginStart">@dimen/no_chat_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/no_chat_small_margin</item>
        <item name="android:visibility">gone</item>

    </style>

    <string name="no_chat_insert_message_hint">Сообщение</string>


</resources>