<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/no_chat_middle_margin"
    android:paddingEnd="@dimen/no_chat_very_big_margin"
    android:paddingBottom="@dimen/no_chat_middle_margin"
    android:paddingTop="@dimen/no_chat_middle_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/civ_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/no_chat_small_margin"
            android:background="@android:color/holo_orange_dark" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/no_chat_big_margin"
            android:background="@color/light_grey">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/no_chat_horizontal_margin"
                android:text="dfdjfdkfkdjfkdjfkdjfddf"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_message"
                android:paddingBottom="@dimen/no_chat_small_margin"
                android:paddingEnd="@dimen/no_chat_vertical_margin"
                android:text="25.08.1990"
                android:textColor="@android:color/black" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>